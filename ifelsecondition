class ifelsecondition {
    public static void main(String[] args) {

        int number =1 ;
	if (number == 1){ //if (condition) condition return boolean value true and false
	System.out.println("1"); // if return true it do statement in block
	}
	else {		//if return false do this statement in block
	System.out.println("Not 1");
	}


	//ifelse condition can be morethan 2 result
	if (number ==1){
	System.out.println(number);
	}
	else if (number ==2){  // use else if (condition) for do another condition if it needed more 2 case 
	System.out.println(number);
	}
	else if (number ==3){  // can add more than 1 time else if 
	System.out.println(number);
	}
	else{
	System.out.println(number);
	}

}
}
